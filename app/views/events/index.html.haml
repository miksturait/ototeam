.page-header
  = link_to new_event_path, :class => 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    New Event
  %h1 Listing events

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th Name
        %th Start time
        %th Description
        %th Invite start
        %th Inivite stop
        %th User min
        %th User max
        %th Time
        %th Join
        %th Public
        %th
        %th
        %th

    %tbody



      = search_form_for @search, wrapper: :search_form do |f|
        = f.input :name_or_description_cont, placeholder: 'Name or description contains', wrapper_html: { class: 'col-sm-4' }
        = f.input :start_time_gt, placeholder: 'Starts after', as: :datetime_picker, wrapper_html: { class: 'col-sm-3' }
        = f.input :start_time_lt, placeholder: 'Starts before', as: :datetime_picker, wrapper_html: { class: 'col-sm-3' }
        .form-group
          = f.button :submit

        = paginate @events
      - @events.each do |event|
        %tr
          %td= event.name
          %td= event.start_time
          %td= event.description
          %td= event.invite_start
          %td= event.inivite_stop
          %td= event.user_min
          %td= event.user_max
          %td= event.time
          %td= event.join
          %td= event.public
          %td= link_to 'Show', event
          %td= link_to 'Edit', edit_event_path(event)
          %td= link_to 'Destroy', event, :data => { confirm: 'Are you sure?' }, :method => :delete


